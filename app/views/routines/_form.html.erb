<%= form_with(model: routine, class: "contents") do |form| %>
  <% if routine.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(routine.errors.count, "error") %> prohibited this routine from being saved:</h2>

      <ul>
        <% routine.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
  <%= form.label :student_id %>
  <%= form.collection_select(:student_id, Student.all, :id, :first_name,class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full") %>

  <%= form.label :teacher_id %>
  <%= form.collection_select(:teacher_id, Teacher.all, :id, :first_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full") %>
</div>
  
  <div class="my-5">
    <%= form.label :song %>
    <%= form.text_field :song, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
  <%= form.label :level %>
  <%= form.text_field :level, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
</div>

  <div class="my-5">
    <%= form.label :style %>
    <%= form.text_field :style, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

 

  <div class="my-5">
    <%= form.label :dance %>
    <%= form.text_field :dance, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

 

  <div class="my-5">
    <%= form.label :description %>
    <%= form.hidden_field :description %>
    <div id="editor-container"></div>
  <div id="editor"><%= sanitize @routine.description %></div>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer", onclick: "subForm()"  %>
  </div>
<% end %>

<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script>
var myForm = document.querySelector('#form');
  var quill = new Quill('#editor', {
    theme: 'snow'
  });

  var subForm = function() {
  var description = document.querySelector('#routine_description');
  description.value = quill.root.innerHTML;
}
</script>