
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Lessons</h1>
    <%= link_to 'New lesson', new_lesson_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="lessons" class="min-w-full">
    <table class="table-auto min-w-full border-black-500">
      <thead>
        <th class="border-slate-900">Lesson Time</th>
        <th>Student</th>
        <th>Teacher</th>
      </thead>
      <tbody>
      <% @lessons.each do |lesson| %>
        <tr>
          <td><%= simple_time(lesson.start_time) %></td>
          <td><%= lesson.student.full_name %></td>
          <td><%= lesson.teacher.full_name %></td>
          <td><%= link_to "Show", lesson %></td>
          <td><%= button_to "Delete", lesson, :method => "delete" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
